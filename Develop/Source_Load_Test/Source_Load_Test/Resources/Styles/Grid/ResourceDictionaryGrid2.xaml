

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Grid" x:Key="StyleGridDefault1">
        <Setter Property="Background" Value="#F0F0F0"/>
    </Style>
    <Style TargetType="Grid" x:Key="StyleGridDefault2">
        <Setter Property="Background" Value="#F0F0F0"/>
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="BorderBrush" Value="Blue"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>
        </Style.Resources>
    </Style>
    <Style TargetType="Grid" x:Key="StyleGridDefault3">
        <Setter Property="Background" Value="White"/>
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="BorderBrush" Value="Blue"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>
        </Style.Resources>
    </Style>
    <Style TargetType="Grid" x:Key="StyleGridDefault4">
        <Setter Property="Background" Value="WhiteSmoke"/>
    </Style>
    <Style TargetType="Grid" x:Key="StyleGridDefault5">
        <Setter Property="Background" Value="White"/>
    </Style>
</ResourceDictionary>