<Page x:Class="Source_Load_Test.View.SourceView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d"
      d:DesignHeight="700"
      d:DesignWidth="1050"
      Title="SourceView"
      FontFamily="Noto Sans KR"
      Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="265" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="135" />
        </Grid.ColumnDefinitions>

        <!-- ============================================ -->
        <!-- 왼쪽 제어 패널 -->
        <!-- ============================================ -->
        <ScrollViewer Grid.Column="0"
                      VerticalScrollBarVisibility="Auto"
                      Margin="8,5,5,5">
            <StackPanel>

                <!-- 장비 정보 -->
                <Border BorderBrush="#2196F3"
                        BorderThickness="2"
                        Padding="5"
                        Margin="0,0,0,6">
                    <StackPanel>
                        <TextBlock Text="Device Info"
                                   FontWeight="Bold"
                                   FontSize="9"
                                   Foreground="#2196F3" />
                        <TextBlock Text="{Binding DeviceInfo}"
                                   FontSize="8"
                                   TextWrapping="Wrap"
                                   Margin="0,2,0,0" />
                    </StackPanel>
                </Border>

                <!-- 동작 모드 선택 -->
                <TextBlock Text="Priority Mode"
                           FontWeight="Bold"
                           FontSize="9"
                           Background="#E3F2FD"
                           Padding="4"
                           Margin="0,0,0,3" />
                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0"
                            Content="CC"
                            Background="{Binding IsCC, Converter={StaticResource BoolToColorConverter}}"
                            Foreground="White"
                            FontWeight="Bold"
                            Height="30"
                            FontSize="11"
                            Margin="0,0,2,0"
                            Command="{Binding SetModeCommand}"
                            CommandParameter="CC" />
                    <Button Grid.Column="1"
                            Content="CV"
                            Background="{Binding IsCV, Converter={StaticResource BoolToColorConverter}}"
                            Foreground="White"
                            FontWeight="Bold"
                            Height="30"
                            FontSize="11"
                            Margin="2,0,0,0"
                            Command="{Binding SetModeCommand}"
                            CommandParameter="CV" />
                </Grid>

                <!-- 현재 동작 모드 -->
                <Border BorderBrush="#FF9800"
                        BorderThickness="1"
                        Padding="4"
                        Margin="0,0,0,8"
                        Background="#FFF3E0">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <TextBlock Text="현재: "
                                   FontSize="9"
                                   FontWeight="Bold"
                                   Foreground="#FF6F00" />
                        <TextBlock Text="{Binding CurrentMode}"
                                   FontSize="10"
                                   FontWeight="Bold"
                                   Foreground="#D84315"
                                   Margin="3,0,0,0" />
                    </StackPanel>
                </Border>

                <!-- 설정값 & Slew Rate 섹션 -->
                <TextBlock Text="설정 값 / Slew Rate"
                           FontWeight="Bold"
                           FontSize="9"
                           Background="#E3F2FD"
                           Padding="4"
                           Margin="0,0,0,3" />

                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="125" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- 좌측: 전압/전류 설정 -->
                    <Border Grid.Column="0"
                            BorderBrush="#BDBDBD"
                            BorderThickness="1"
                            Padding="6"
                            Margin="0,0,3,0">
                        <StackPanel>
                            <TextBlock Text="Voltage (V)"
                                       FontSize="8"
                                       Foreground="Gray"
                                       Margin="0,0,0,2" />
                            <TextBox Text="{Binding SetV, UpdateSourceTrigger=PropertyChanged}"
                                     FontSize="14"
                                     FontWeight="Bold"
                                     Padding="3"
                                     HorizontalContentAlignment="Right"
                                     Margin="0,0,0,6" />

                            <TextBlock Text="Current (A)"
                                       FontSize="8"
                                       Foreground="Gray"
                                       Margin="0,0,0,2" />
                            <TextBox Text="{Binding SetC, UpdateSourceTrigger=PropertyChanged}"
                                     FontSize="14"
                                     FontWeight="Bold"
                                     Padding="3"
                                     HorizontalContentAlignment="Right" />
                        </StackPanel>
                    </Border>

                    <!-- 우측: Slew Rate -->
                    <StackPanel Grid.Column="1"
                                Margin="3,0,0,0">

                        <!-- Voltage Slew -->
                        <Border BorderBrush="#2196F3"
                                BorderThickness="1"
                                Padding="4"
                                Margin="0,0,0,3"
                                Background="White">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                           Text="V (V/s)"
                                           FontSize="8"
                                           FontWeight="Bold"
                                           Foreground="#1976D2"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,3" />

                                <!-- RISE -->
                                <Grid Grid.Row="1"
                                      Margin="0,0,0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="14" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="↑"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="#4CAF50"
                                               VerticalAlignment="Center" />
                                    <TextBox Grid.Column="1"
                                             Text="{Binding VoltageRise, UpdateSourceTrigger=PropertyChanged}"
                                             FontSize="10"
                                             Padding="2"
                                             HorizontalContentAlignment="Right"
                                             BorderBrush="#BDBDBD" />
                                </Grid>

                                <!-- FALL -->
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="14" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="↓"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="#F44336"
                                               VerticalAlignment="Center" />
                                    <TextBox Grid.Column="1"
                                             Text="{Binding VoltageFall, UpdateSourceTrigger=PropertyChanged}"
                                             FontSize="10"
                                             Padding="2"
                                             HorizontalContentAlignment="Right"
                                             BorderBrush="#BDBDBD" />
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- Current Slew -->
                        <Border BorderBrush="#FF9800"
                                BorderThickness="1"
                                Padding="4"
                                Background="White">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                           Text="I (A/s)"
                                           FontSize="8"
                                           FontWeight="Bold"
                                           Foreground="#F57C00"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,3" />

                                <!-- RISE -->
                                <Grid Grid.Row="1"
                                      Margin="0,0,0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="14" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="↑"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="#4CAF50"
                                               VerticalAlignment="Center" />
                                    <TextBox Grid.Column="1"
                                             Text="{Binding CurrentRise, UpdateSourceTrigger=PropertyChanged}"
                                             FontSize="10"
                                             Padding="2"
                                             HorizontalContentAlignment="Right"
                                             BorderBrush="#BDBDBD" />
                                </Grid>

                                <!-- FALL -->
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="14" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="↓"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="#F44336"
                                               VerticalAlignment="Center" />
                                    <TextBox Grid.Column="1"
                                             Text="{Binding CurrentFall, UpdateSourceTrigger=PropertyChanged}"
                                             FontSize="10"
                                             Padding="2"
                                             HorizontalContentAlignment="Right"
                                             BorderBrush="#BDBDBD" />
                                </Grid>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- 적용 버튼 -->
                <Button Content="APPLY SETTINGS"
                        Background="#2196F3"
                        Foreground="White"
                        FontWeight="Bold"
                        Height="34"
                        FontSize="12"
                        Margin="0,0,0,8"
                        Command="{Binding ApplyCommand}" />

                <!-- 측정값 -->
                <TextBlock Text="실시간 측정값"
                           FontWeight="Bold"
                           FontSize="9"
                           Background="#FFF3E0"
                           Padding="4"
                           Margin="0,0,0,3" />

                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            BorderBrush="#FF9800"
                            BorderThickness="1"
                            Padding="6"
                            Background="#FFFEF5E7"
                            Margin="0,0,3,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0"
                                       Grid.Column="0"
                                       Text="{Binding MeasuredVoltage}"
                                       FontSize="15"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center" />
                            <TextBlock Grid.Row="0"
                                       Grid.Column="1"
                                       Text=" V"
                                       FontSize="12"
                                       VerticalAlignment="Center"
                                       Margin="3,0,0,0" />

                            <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       Text="{Binding MeasuredCurrent}"
                                       FontSize="15"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center" />
                            <TextBlock Grid.Row="1"
                                       Grid.Column="1"
                                       Text=" A"
                                       FontSize="12"
                                       VerticalAlignment="Center"
                                       Margin="3,0,0,0" />
                        </Grid>
                    </Border>

                    <Border Grid.Column="1"
                            BorderBrush="#BDBDBD"
                            BorderThickness="1"
                            Padding="4"
                            Margin="3,0,0,0"
                            Background="White">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="응답"
                                       FontSize="8"
                                       HorizontalAlignment="Center"
                                       Foreground="Gray" />
                            <TextBox Text="{Binding ResponseTime}"
                                     FontSize="11"
                                     FontWeight="Bold"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     HorizontalContentAlignment="Center"
                                     Margin="0,2" />
                            <TextBlock Text="초"
                                       FontSize="8"
                                       HorizontalAlignment="Center"
                                       Foreground="Gray" />
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- 전력 -->
                <Border BorderBrush="#4CAF50"
                        BorderThickness="1.5"
                        Padding="5"
                        Margin="0,0,0,8"
                        Background="#E8F5E9">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="POWER "
                                   FontSize="10"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center" />
                        <TextBlock Grid.Column="1"
                                   Text="{Binding MeasuredPower}"
                                   FontSize="15"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center" />
                        <TextBlock Grid.Column="2"
                                   Text=" W"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   Margin="3,0,0,0" />
                    </Grid>
                </Border>

                <!-- OUTPUT 버튼 -->
                <Button Content="OUTPUT ON"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="Bold"
                        Height="40"
                        Margin="0,0,0,4"
                        FontSize="13"
                        Command="{Binding StartStopCommand}"
                        CommandParameter="ON" />
                <Button Content="OUTPUT OFF"
                        Background="#F44336"
                        Foreground="White"
                        FontWeight="Bold"
                        Height="40"
                        FontSize="13"
                        Margin="0,0,0,5"
                        Command="{Binding StartStopCommand}"
                        CommandParameter="OFF" />

                <!-- 출력 상태 -->
                <Border BorderBrush="#FF9800"
                        BorderThickness="1.5"
                        Padding="4"
                        Background="#FFF3E0">
                    <StackPanel>
                        <TextBlock Text="Output Status"
                                   FontWeight="Bold"
                                   FontSize="8"
                                   Foreground="#FF6F00"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding OutputStatus}"
                                   FontSize="11"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,3,0,0" />
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- ============================================ -->
        <!-- 중앙 그래프 -->
        <!-- ============================================ -->
        <Border Grid.Column="1"
                BorderBrush="DarkGray"
                BorderThickness="2"
                Margin="5"
                Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="200" />
                </Grid.RowDefinitions>

                <!-- 그래프 -->
                <lvc:CartesianChart Grid.Row="0"
                                    Series="{Binding ChartSeries}"
                                    LegendLocation="Right"
                                    Margin="5">
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="Time"
                                  Labels="{Binding TimeArray}"
                                  FontSize="10" />
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Voltage / Current"
                                  MinValue="0"
                                  MaxValue="40">
                            <lvc:Axis.Separator>
                                <lvc:Separator Step="5" />
                            </lvc:Axis.Separator>
                        </lvc:Axis>
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>

                <!-- 데이터 테이블 -->
                <DataGrid Grid.Row="1"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          Margin="5"
                          FontSize="10"
                          ItemsSource="{Binding DataListSource}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="No"
                                            Width="40"
                                            Binding="{Binding No}" />
                        <DataGridTextColumn Header="시간"
                                            Width="*"
                                            Binding="{Binding Time}" />
                        <DataGridTextColumn Header="전압(V)"
                                            Width="*"
                                            Binding="{Binding Voltage}" />
                        <DataGridTextColumn Header="전류(A)"
                                            Width="*"
                                            Binding="{Binding Current}" />
                        <DataGridTextColumn Header="전력(W)"
                                            Width="*"
                                            Binding="{Binding Power}" />
                        <DataGridTextColumn Header="모드"
                                            Width="55"
                                            Binding="{Binding Mode}" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- ============================================ -->
        <!-- 오른쪽 메뉴 -->
        <!-- ============================================ -->
        <ScrollViewer Grid.Column="2"
                      VerticalScrollBarVisibility="Auto"
                      Margin="5,5,8,5">
            <StackPanel>
                <TextBlock Text="Advanced"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"
                           FontSize="12"
                           Margin="0,0,0,6"
                           Background="#E3F2FD"
                           Padding="4" />

                <!-- 보호 설정 -->
                <Button Content="보호 설정"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Background="White"
                        Margin="0,3"
                        Height="32"
                        FontSize="10"
                        Command="{Binding OpenProtectionCommand}" />

                <!-- Remote Sense -->
                <Button Content="Remote Sense"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Background="White"
                        Margin="0,3"
                        Height="32"
                        FontSize="10"
                        Command="{Binding ToggleSenseCommand}" />
                <Border BorderBrush="Gray"
                        BorderThickness="1"
                        Padding="3"
                        Margin="3,0,3,3"
                        Background="#F5F5F5">
                    <TextBlock Text="{Binding SenseStatus}"
                               FontSize="8"
                               HorizontalAlignment="Center" />
                </Border>

                <!-- Bleeder -->
                <Button Content="Bleeder 설정"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Background="White"
                        Margin="0,3"
                        Height="32"
                        FontSize="10"
                        Command="{Binding OpenBleederCommand}" />
                <Border BorderBrush="Gray"
                        BorderThickness="1"
                        Padding="3"
                        Margin="3,0,3,3"
                        Background="#F5F5F5">
                    <TextBlock Text="{Binding BleederStatus}"
                               FontSize="8"
                               HorizontalAlignment="Center" />
                </Border>

                <!-- 강제 방전 -->
                <Button Content="강제 방전"
                        BorderBrush="#FF5722"
                        BorderThickness="2"
                        Background="#FFEBEE"
                        Foreground="#C62828"
                        Margin="0,3"
                        Height="32"
                        FontSize="10"
                        Command="{Binding ForceDischargeCommand}" />

                <Separator Margin="0,10,0,8" />

                <!-- 설정 관리 -->
                <Button Content="설정 저장"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Background="White"
                        Margin="0,3"
                        Height="30"
                        FontSize="9"
                        Command="{Binding SaveSettingsCommand}" />
                <Button Content="설정 불러오기"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Background="White"
                        Margin="0,3"
                        Height="30"
                        FontSize="9"
                        Command="{Binding ResetCommand}" />

                <Separator Margin="0,8,0,8" />

                <!-- 시스템 명령 -->
                <Button Content="장비 리셋"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Background="#FFEBEE"
                        Foreground="#C62828"
                        Margin="0,3"
                        Height="30"
                        FontSize="9"
                        Command="{Binding ResetCommand}" />
                <Button Content="상태 초기화"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Background="White"
                        Margin="0,3"
                        Height="30"
                        FontSize="9"
                        Command="{Binding RstBtnCommand}" />
                <Button Content="자체 테스트"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Background="White"
                        Margin="0,3"
                        Height="30"
                        FontSize="9"
                        Command="{Binding SelfTestCommand}" />

                <!-- 에러 표시 -->
                <Border BorderBrush="Red"
                        BorderThickness="1"
                        Padding="5"
                        Margin="0,10,0,0"
                        Background="#FFEBEE"
                        Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="System Error"
                                   FontSize="8"
                                   FontWeight="Bold"
                                   Foreground="Red" />
                        <TextBlock Text="{Binding LastError}"
                                   FontSize="8"
                                   Foreground="Red"
                                   TextWrapping="Wrap"
                                   Margin="0,3,0,0" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>