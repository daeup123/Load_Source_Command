<Page x:Class="Source_Load_Test.View.LoadView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d"
      d:DesignHeight="700"
      d:DesignWidth="1050"
      Title="LoadView"
      FontFamily="Noto Sans KR"
      Background="white">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="140" />
        </Grid.ColumnDefinitions>

        <!-- ============================================ -->
        <!-- 왼쪽 제어 패널 -->
        <!-- ============================================ -->
        <StackPanel Grid.Column="0"
                    Margin="10">

            <!-- 장비 정보 및 상태 표시 (Identify) -->
            <Border BorderBrush="#2196F3"
                    BorderThickness="2"
                    Padding="5"
                    Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Device Info"
                               FontWeight="Bold"
                               FontSize="11"
                               Foreground="#2196F3" />
                    <TextBlock Text="{Binding DeviceInfo}"
                               FontSize="9"
                               TextWrapping="Wrap"
                               Margin="0,3,0,0" />
                </StackPanel>
            </Border>

            <!-- 동작 모드 선택 (ModeCC/CV/CR/CP + ModeQuery) -->
            <Label Content="Operating Mode"
                   FontWeight="Bold"
                   Background="#E3F2FD"
                   Padding="5" />
            <Grid Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- CC 모드: :FUNCtion:MODE CC -->
                <Button Grid.Column="0"
                        Content="CC"
                        Background="{Binding IsCC, Converter={StaticResource BoolToColorConverter}}"
                        Foreground="White"
                        FontWeight="Bold"
                        Command="{Binding SetModeCommand}"
                        CommandParameter="CC" />

                <!-- CV 모드: :FUNCtion:MODE CV -->
                <Button Grid.Column="1"
                        Content="CV"
                        Background="{Binding IsCV, Converter={StaticResource BoolToColorConverter}}"
                        Foreground="White"
                        FontWeight="Bold"
                        Command="{Binding SetModeCommand}"
                        CommandParameter="CV" />

                <!-- CR 모드: :FUNCtion:MODE CR -->
                <Button Grid.Column="2"
                        Content="CR"
                        Background="{Binding IsCR, Converter={StaticResource BoolToColorConverter}}"
                        Foreground="White"
                        FontWeight="Bold"
                        Command="{Binding SetModeCommand}"
                        CommandParameter="CR" />

                <!-- CP 모드: :FUNCtion:MODE CP -->
                <Button Grid.Column="3"
                        Content="CP"
                        Background="{Binding IsCP, Converter={StaticResource BoolToColorConverter}}"
                        Foreground="White"
                        FontWeight="Bold"
                        Command="{Binding SetModeCommand}"
                        CommandParameter="CP" />
            </Grid>

            <!-- 설정 값 섹션 -->
            <Grid Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0"
                       Content="설정 값"
                       BorderBrush="Black"
                       BorderThickness="1"
                       Background="White"
                       Margin="0,0,5,0"
                       HorizontalContentAlignment="Center" />
                <Label Grid.Column="1"
                       Content="응답 설정"
                       BorderBrush="Black"
                       BorderThickness="1"
                       Background="White"
                       Margin="5,0,0,0"
                       HorizontalContentAlignment="Center" />
            </Grid>

            <Grid Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- 설정값 표시 및 입력 -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Border BorderBrush="Black"
                            BorderThickness="1"
                            Padding="8"
                            Margin="0,0,5,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- CC 모드: CurrentSet (:CURRent {0}) -->
                            <StackPanel Grid.Row="0"
                                        Visibility="{Binding IsCC, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="Current (A)"
                                           FontSize="10"
                                           Foreground="Gray" />
                                <TextBox Text="{Binding SetC, UpdateSourceTrigger=PropertyChanged}"
                                         FontSize="14"
                                         FontWeight="Bold"
                                         HorizontalContentAlignment="Right" />
                            </StackPanel>

                            <!-- CV 모드: 전압 설정 (OVPSet 활용) -->
                            <StackPanel Grid.Row="0"
                                        Visibility="{Binding IsCV, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="Voltage (V)"
                                           FontSize="10"
                                           Foreground="Gray" />
                                <TextBox Text="{Binding SetV, UpdateSourceTrigger=PropertyChanged}"
                                         FontSize="14"
                                         FontWeight="Bold"
                                         HorizontalContentAlignment="Right" />
                            </StackPanel>

                            <!-- CR 모드: ResistanceSet (:RESistance {0}) -->
                            <StackPanel Grid.Row="0"
                                        Visibility="{Binding IsCR, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="Resistance (Ω)"
                                           FontSize="10"
                                           Foreground="Gray" />
                                <TextBox Text="{Binding SetR, UpdateSourceTrigger=PropertyChanged}"
                                         FontSize="14"
                                         FontWeight="Bold"
                                         HorizontalContentAlignment="Right" />
                            </StackPanel>

                            <!-- CP 모드: 전력 설정 -->
                            <StackPanel Grid.Row="0"
                                        Visibility="{Binding IsCP, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="Power (W)"
                                           FontSize="10"
                                           Foreground="Gray" />
                                <TextBox Text="{Binding SetP, UpdateSourceTrigger=PropertyChanged}"
                                         FontSize="14"
                                         FontWeight="Bold"
                                         HorizontalContentAlignment="Right" />
                            </StackPanel>

                            <!-- 전압 한계 표시 (OVPQuery) -->
                            <StackPanel Grid.Row="2">
                                <TextBlock Text="Voltage Limit"
                                           FontSize="9"
                                           Foreground="Gray" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="{Binding VoltageLimit}"
                                               FontSize="11"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center" />
                                    <TextBlock Grid.Column="1"
                                               Text=" V"
                                               FontSize="11"
                                               VerticalAlignment="Center" />
                                </Grid>
                            </StackPanel>

                            <!-- 전류 한계 표시 (OCPQuery) -->
                            <StackPanel Grid.Row="4">
                                <TextBlock Text="Current Limit"
                                           FontSize="9"
                                           Foreground="Gray" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="{Binding CurrentLimit}"
                                               FontSize="11"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center" />
                                    <TextBlock Grid.Column="1"
                                               Text=" A"
                                               FontSize="11"
                                               VerticalAlignment="Center" />
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- 설정 적용 버튼 -->
                    <Button Grid.Row="4"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Content="APPLY"
                            Background="#2196F3"
                            Foreground="White"
                            FontWeight="Bold"
                            Height="30"
                            Margin="0,5,0,0"
                            Command="{Binding ApplyCommand}" />
                </Grid>
                <!-- 응답 속도 설정 (SlewRateSet/Query) -->
                <StackPanel Grid.Column="1"
                            Margin="5,0,0,0">
                    <!-- SLOPE: Slew Rate 설정 (:SLEW:RATE {0}) -->
                    <Button Content="SLOPE"
                            BorderBrush="Black"
                            BorderThickness="1"
                            Background="White"
                            Height="35"
                            Command="{Binding OpenSlewRateCommand}" />

                    <TextBlock Text="Slew Rate"
                               FontSize="9"
                               Foreground="Gray"
                               Margin="0,8,0,2"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="{Binding SlewRate}"
                               FontSize="11"
                               FontWeight="Bold"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="A/μs"
                               FontSize="9"
                               Foreground="Gray"
                               HorizontalAlignment="Center" />

                    <!-- FAST: 빠른 응답 모드 -->
                    <Button Content="FAST"
                            BorderBrush="Black"
                            BorderThickness="1"
                            Background="White"
                            Margin="0,10,0,0"
                            Height="35"
                            Command="{Binding SetFastModeCommand}" />
                </StackPanel>
            </Grid>

            <!-- 측정값 섹션 -->
            <Grid Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0"
                       Content="실시간 측정값"
                       BorderBrush="Black"
                       BorderThickness="1"
                       Background="#FFF3E0"
                       Margin="0,0,5,0"
                       HorizontalContentAlignment="Center" />
                <Label Grid.Column="1"
                       Content="응답 시간 설정"
                       BorderBrush="Black"
                       BorderThickness="1"
                       Background="White"
                       Margin="5,0,0,0"
                       HorizontalContentAlignment="Center" />
            </Grid>

            <Grid Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- 실시간 측정값 (CurrentMeasure, VoltageMeasure) -->
                <Border Grid.Column="0"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Padding="8"
                        Margin="0,0,5,0"
                        Background="#FFFEF5E7">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- 전압 측정 (:MEASure:VOLTage?) -->
                        <TextBlock Grid.Row="0"
                                   Grid.Column="0"
                                   Text="{Binding GetV}"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center" />
                        <TextBlock Grid.Row="0"
                                   Grid.Column="1"
                                   Text=" V"
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   Margin="3,0,0,0" />

                        <!-- 전류 측정 (:MEASure:CURRent?) -->
                        <TextBlock Grid.Row="1"
                                   Grid.Column="0"
                                   Text="{Binding GetC}"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center" />
                        <TextBlock Grid.Row="1"
                                   Grid.Column="1"
                                   Text=" A"
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   Margin="3,0,0,0" />
                    </Grid>
                </Border>

                <!-- 응답시간 표시 -->
                <Border Grid.Column="1"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Padding="5"
                        Margin="5,0,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                 Text="{Binding ResponseTime}"
                                 FontSize="14"
                                 FontWeight="Bold"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 BorderThickness="0" />
                        <Label Grid.Column="1"
                               Content="초"
                               FontWeight="Bold"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Margin="18,0,0,0">

                        </Label>
                    </Grid>
                </Border>
            </Grid>

            <!-- 전력 측정값 (V × I 계산) -->
            <Border BorderBrush="Black"
                    BorderThickness="2"
                    Padding="8"
                    Margin="0,10,0,0"
                    Background="#E8F5E9">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="POWER: "
                               FontSize="12"
                               FontWeight="Bold"
                               VerticalAlignment="Center" />
                    <TextBlock Grid.Column="1"
                               Text="{Binding GetP}"
                               FontSize="16"
                               FontWeight="Bold"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center" />
                    <TextBlock Grid.Column="2"
                               Text=" W"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="3,0,0,0" />
                </Grid>
            </Border>

            <!-- 부하 ON/OFF 제어 (LoadOn, LoadOff, LoadStateQuery) -->
            <Button Content="LOAD ON"
                    Background="#4CAF50"
                    Foreground="White"
                    FontWeight="Bold"
                    Height="45"
                    Margin="0,20,0,5"
                    FontSize="14"
                    Command="{Binding StartStopCommand}"
                    CommandParameter="ON" />

            <Button Content="LOAD OFF"
                    Background="#F44336"
                    Foreground="White"
                    FontWeight="Bold"
                    Height="45"
                    FontSize="14"
                    Command="{Binding StartStopCommand}"
                    CommandParameter="OFF" />

            <!-- 상태 표시 -->
            <Border BorderBrush="#FF9800"
                    BorderThickness="2"
                    Padding="5"
                    Margin="0,10,0,0"
                    Background="#FFF3E0">
                <StackPanel>
                    <TextBlock Text="Load Status"
                               FontWeight="Bold"
                               FontSize="10"
                               Foreground="#FF6F00" />
                    <TextBlock Text="{Binding LoadStatus}"
                               FontSize="12"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,3,0,0" />
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- ============================================ -->
        <!-- 중앙 그래프 및 데이터 영역 -->
        <!-- ============================================ -->
        <Border Grid.Column="1"
                BorderBrush="DarkGray"
                BorderThickness="2"
                Margin="10"
                Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- 실시간 그래프 -->
                <lvc:CartesianChart Series="{Binding ChartSeries}"
                                    LegendLocation="Right"
                                    Grid.Row="0">
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="Time"
                                  Labels="{Binding TimeArray}" />
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Voltage / Current"
                                  MinValue="0"
                                  MaxValue="40">
                            <lvc:Axis.Separator>
                                <lvc:Separator Step="5" />
                            </lvc:Axis.Separator>
                        </lvc:Axis>
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>

                <!-- 측정 데이터 테이블 -->
                <DataGrid Grid.Row="1"
                          Height="80"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          Margin="5"
                          ItemsSource="{Binding DataListLoad}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="No"
                                            Width="50"
                                            Binding="{Binding No}" />
                        <DataGridTextColumn Header="시간"
                                            Width="*"
                                            Binding="{Binding Time}" />
                        <DataGridTextColumn Header="전압(V)"
                                            Width="*"
                                            Binding="{Binding Voltage}" />
                        <DataGridTextColumn Header="전류(A)"
                                            Width="*"
                                            Binding="{Binding Current}" />
                        <DataGridTextColumn Header="전력(W)"
                                            Width="*"
                                            Binding="{Binding Power}" />
                        <DataGridTextColumn Header="모드"
                                            Width="60"
                                            Binding="{Binding Mode}" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- ============================================ -->
        <!-- 오른쪽 고급 기능 메뉴 -->
        <!-- ============================================ -->
        <StackPanel Grid.Column="2"
                    Margin="10">
            <Label Content="Advanced"
                   HorizontalContentAlignment="Center"
                   FontWeight="Bold"
                   FontSize="14"
                   Margin="0,0,0,10"
                   Background="#E3F2FD" />

            <!-- 보호 설정 (OVPSet, OCPSet, OPPSet, ProtectionClear) -->
            <Button Content="보호 설정"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Background="White"
                    Margin="0,5"
                    Height="35"
                    Command="{Binding OpenProtectionCommand}" />

            <!-- 트랜지언트 모드 (TransientMode, TransientHigh/Low, TransientFrequency, TransientDuty) -->
            <Button Content="트랜지언트"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Background="White"
                    Margin="0,5"
                    Height="35"
                    Command="{Binding OpenTransientCommand}" />

            <!-- 리스트 모드 (ListEnable, ListStepSet, ListRun, ListAbort) -->
            <Button Content="리스트 모드"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Background="White"
                    Margin="0,5"
                    Height="35"
                    Command="{Binding OpenListModeCommand}" />

            <!-- 단락 테스트 (ShortOn, ShortOff, ShortStateQuery) -->
            <Button Content="단락 테스트"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Background="White"
                    Margin="0,5"
                    Height="35"
                    Command="{Binding ShortTestCommand}" />

            <Separator Margin="0,15,0,10" />

            <!-- 시스템 명령 -->
            <Button Content="설정 저장"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Background="White"
                    Margin="0,5"
                    Height="32"
                    Command="{Binding SaveSettingsCommand}" />

            <!-- 리셋 (*RST) -->
            <Button Content="장비 리셋"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Background="#FFEBEE"
                    Foreground="#C62828"
                    Margin="0,5"
                    Height="32"
                    Command="{Binding RstBtnCommand}" />

            <!-- 상태 초기화 (*CLS) -->
            <Button Content="상태 초기화"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Background="White"
                    Margin="0,5"
                    Height="32"
                    Command="{Binding RstBtnCommand}" />

            <!-- 자체 테스트 (*TST?) -->
            <Button Content="자체 테스트"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Background="White"
                    Margin="0,5"
                    Height="32"
                    Command="{Binding SelfTestCommand}" />

            <!-- 에러 조회 (:SYSTem:ERRor?) -->
            <Button Content="에러 조회"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Background="#FFF9C4"
                    Margin="0,15,0,5"
                    Height="32"
                    Command="{Binding CheckErrorCommand}" />

            <TextBlock Text="{Binding LastError}"
                       FontSize="9"
                       Foreground="Red"
                       TextWrapping="Wrap"
                       Margin="5,5,5,0" />
        </StackPanel>
    </Grid>
</Page>