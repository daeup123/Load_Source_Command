<Page x:Class="Source_Load_Test.View.ConnectView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Source_Load_Test.View"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="ConnectView"
      FontFamily="Noto Sans KR"
      Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Load 섹션 -->
        <Border Grid.Column="0"
                BorderBrush="Black"
                BorderThickness="2"
                Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="60" />
                </Grid.RowDefinitions>

                <!-- 헤더 -->
                <Border Grid.Row="0"
                        Background="#4A90E2"
                        BorderBrush="Black"
                        BorderThickness="0,0,0,1">
                    <TextBlock Text="Load"
                               FontSize="16"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="White" />
                </Border>

                <!-- 컨텐츠 영역 -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- 인터페이스 선택 -->
                    <Border Grid.Row="0"
                            BorderBrush="Black"
                            BorderThickness="0,0,0,1"
                            Padding="10,8">
                        <TextBlock Text="인터페이스 선택"
                                   FontSize="12"
                                   HorizontalAlignment="Center" />
                    </Border>

                    <Border Grid.Row="1"
                            BorderBrush="Black"
                            BorderThickness="0,0,0,1"
                            Padding="10">
                        <ComboBox VerticalAlignment="Center"
                                  Height="30"
                                  HorizontalAlignment="Left"
                                  Width="326">
                            <ComboBoxItem Content="GPIB" />
                            <ComboBoxItem Content="USB" />
                            <ComboBoxItem Content="RS232" />
                            <ComboBoxItem Content="Ethernet" />
                        </ComboBox>
                    </Border>

                    <!-- 파라미터 설정 -->
                    <Border Grid.Row="2"
                            BorderBrush="Black"
                            BorderThickness="0,0,0,1"
                            Padding="10,8">
                        <TextBlock Text="파라미터 설정"
                                   FontSize="12"
                                   HorizontalAlignment="Center" />
                    </Border>

                    <Border Grid.Row="3"
                            BorderBrush="Black"
                            BorderThickness="0,0,0,1"
                            Padding="10">
                        <ComboBox VerticalAlignment="Center"
                                  Height="30">
                            <ComboBoxItem Content="9600 baud" />
                            <ComboBoxItem Content="19200 baud" />
                            <ComboBoxItem Content="38400 baud" />
                            <ComboBoxItem Content="115200 baud" />
                        </ComboBox>
                    </Border>

                </Grid>

                <!-- 하단 버튼 -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="연결"
                            Background="#4CAF50"
                            Foreground="White"
                            FontWeight="Bold"
                            Height="40"
                            Margin="10,10,5,10" 
                            Command="{Binding Connect}"
                            CommandParameter="Load Connect"/>

                    <Button Grid.Column="2"
                            Content="연결해제"
                            Background="#F44336"
                            Foreground="White"
                            FontWeight="Bold"
                            Height="40"
                            Margin="5,10,10,10"
                            Command="{Binding Connect}"
                            CommandParameter="Load Disconnect" />
                </Grid>
            </Grid>
        </Border>

        <!-- Source 섹션 -->
        <Border Grid.Column="2"
                BorderBrush="Black"
                BorderThickness="2"
                Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="60" />
                </Grid.RowDefinitions>

                <!-- 헤더 -->
                <Border Grid.Row="0"
                        Background="#4A90E2"
                        BorderBrush="Black"
                        BorderThickness="0,0,0,1">
                    <TextBlock Text="Source"
                               FontSize="16"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="White" />
                </Border>

                <!-- 컨텐츠 영역 -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- 인터페이스 선택 -->
                    <Border Grid.Row="0"
                            BorderBrush="Black"
                            BorderThickness="0,0,0,1"
                            Padding="10,8">
                        <TextBlock Text="인터페이스 선택"
                                   FontSize="12"
                                   HorizontalAlignment="Center" />
                    </Border>

                    <Border Grid.Row="1"
                            BorderBrush="Black"
                            BorderThickness="0,0,0,1"
                            Padding="10">
                        <ComboBox VerticalAlignment="Center"
                                  Height="30">
                            <ComboBoxItem Content="GPIB" />
                            <ComboBoxItem Content="USB" />
                            <ComboBoxItem Content="RS232" />
                            <ComboBoxItem Content="Ethernet" />
                        </ComboBox>
                    </Border>

                    <!-- 파라미터 설정 -->
                    <Border Grid.Row="2"
                            BorderBrush="Black"
                            BorderThickness="0,0,0,1"
                            Padding="10,8">
                        <TextBlock Text="파라미터 설정"
                                   FontSize="12"
                                   HorizontalAlignment="Center" />
                    </Border>

                    <Border Grid.Row="3"
                            BorderBrush="Black"
                            BorderThickness="0,0,0,1"
                            Padding="10">
                        <ComboBox VerticalAlignment="Center"
                                  Height="30">
                            <ComboBoxItem Content="9600 baud" />
                            <ComboBoxItem Content="19200 baud" />
                            <ComboBoxItem Content="38400 baud" />
                            <ComboBoxItem Content="115200 baud" />
                        </ComboBox>
                    </Border>
                </Grid>

                <!-- 하단 버튼 -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="연결"
                            Background="#4CAF50"
                            Foreground="White"
                            FontWeight="Bold"
                            Height="40"
                            Margin="10,10,5,10"
                            Command="{Binding Connect}"
                            CommandParameter="Source Connect" />

                    <Button Grid.Column="2"
                            Content="연결해제"
                            Background="#F44336"
                            Foreground="White"
                            FontWeight="Bold"
                            Height="40"
                            Margin="5,10,10,10"
                            Command="{Binding Connect}"
                            CommandParameter="Source Disconnect" />
                </Grid>
            </Grid>
        </Border>
    </Grid>

</Page>
